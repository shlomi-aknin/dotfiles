  "version": "0.2.0",
  "configurations": [
      {
        "name": "Staging",
        "type": "node",
        "request": "launch",
        "envFile": "${workspaceFolder}/staging.env",
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node",
        "runtimeArgs": [
          "--swc",
          // "--esm" 
        ],
        "program": "${file}",
        "cwd": "${workspaceRoot}",
        "skipFiles": ["<node_internals>/**", "node_modules/**"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
    },
    {
        "name": "Production",
        "type": "node",
        "request": "launch",
        "envFile": "${workspaceFolder}/prod.env",
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node",
        "runtimeArgs": [
          "--swc",
          // "--esm",
        ],
        "program": "${file}",
        "cwd": "${workspaceRoot}",
        "skipFiles": ["<node_internals>/**", "node_modules/**"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
    },
    {
        "name": "Staging - Debug using tsx",
        "type": "node",
        "request": "launch",
        "program": "${file}",
        "envFile": "${workspaceFolder}/staging.env",
        "runtimeExecutable": "/home/shlomo/.nvm/versions/node/v20.12.2/bin/tsx",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**", "node_modules/**"],
    },
    {
        "name": "Production - Debug using tsx",
        "type": "node",
        "request": "launch",
        "program": "${file}",
        "envFile": "${workspaceFolder}/prod.env",
        "runtimeExecutable": "/home/shlomo/.nvm/versions/node/v20.12.2/bin/tsx",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**", "node_modules/**"],
    }
  ]
}
