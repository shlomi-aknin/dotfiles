#
# wm independent hotkeys
#

# dmenu web search
super + s
  dmenu_websearch

# dswitcher
super + space
  dswitcher

# clipmenu
super + p
  clipmenu

# ssh to amazon
super + a
    alacritty -t "SSH AWS" -e ssh -i ~/Documents/carmeter_aws_keypair_11062017.pem ubuntu@car-meter.com
# launcher
super + r
  dmenu_run

# toggle bar
# super + shift + b
# 	{polybar-msg cmd toggle; bspc config top_padding +0, \
# 	polybar-msg cmd toggle; bspc config top_padding 40}


# Nuke a desktop. (i.e. close all windows in it.)
super + d ; {0-9}
	bspc node @^{10,1-9}:/ -c

# Raise/Lower/Toggle volume
{XF86AudioRaiseVolume,XF86AudioLowerVolume,XF86AudioMute}
	amixer set Master {5%+,5%-,toggle}

# gmail, drive
{XF86Mail,XF86HomePage}
	firefox {"https://mail.google.com/mail/u/0/","https://drive.google.com/drive/my-drive"}

# reboot, poweroff
super + shift + {F1,F2}
	sudo {reboot,poweroff}

# update mirrorlist
# super + r
# 	alacritty -e sudo reflector --verbose --latest 25 --sort rate --save /etc/pacman.d/mirrorlist-arch

super + c; b
	alacritty -t "BASHRC Edit" -e nvim ~/.bashrc

super + c; n
	alacritty -t "Network Manager Config" -e nmtui

super + c; s
	alacritty -t "SXHKD Config" -e nvim ~/.config/sxhkd/sxhkdrc

super + c; v
	alacritty -t "Neovim Config" -e nvim ~/.config/nvim/init.vim

super + c; z
	alacritty -t "ZSHRC Edit" -e nvim ~/.zshrc

super + o
	alacritty -t "htop" -e htop

super + z
	alacritty -t "vifm" -e vifmrun

# browser
super + b
	firefox
#	chromium --force-device-scale-factor=1.5

# slimlock
super + shift + BackSpace
	slimlock

# terminal emulator
super + Return
	alacritty

# program launcher
# super + @space
# 	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# set layouts
super + shift + {t,w,g}
	bsp-layout set {tall,wide,rgrid} -- --master-size 0.5

# quit/restart bspwm
super + shift + {q,r}
	bspc {quit,wm -r}

# close
super + x
	bspc node -c

# close all windows on current desktop
super + shift + x
    closewindowsoncurrent

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest window
super + g
	bspc node -s biggest.local.window

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}
#
# focus/swap
#

# focus the node in the given direction
super + {k,j}
	bspc node -f {prev,next}.local.window

# shift the node in the given direction
super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east}

# focus the node in the given direction
super + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}

# focus the next/previous window in the current desktop
# super + {comma,period}
# 	bspc node -f {prev,next}.local.!hidden.window

# focus the node for the given path jump
super + {p,b}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous client in the current desktop
super + {h,l}
	bspc node -f {west,east}.local.window

# focus the next/previous desktop in the current monitor
super + {u,i}
	bspc desktop -f {prev,next}.local

# move window to prev/next desktop
super + shift + {u,i}
	bspc node -d {prev,next} -f

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
# super + {Left,Down,Up,Right}
# 	bspc node -v {-20 0,0 20,0 -20,20 0}
