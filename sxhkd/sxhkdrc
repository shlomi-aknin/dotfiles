#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty	

# program launcher
super + d 
	rofi -show run	

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + {e,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }x
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + w
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.local.window

#
# state/flags
#

# set the window state
super + {t,shift + t,s,shift + f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
# super + {_,shift + }{h,j,k,l}
# 	bspc node -{f,s} {west,south,north,east}
# super + {_,shift + }{Left,Down,Up,Right}
# 	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
# super + {_,shift + }c
#	bspc node -f {next,prev}.local.!hidden.window

# focus the previous window in the current desktop
super + {_,shift + }Left 
	bspc node -{f,s} prev.local.window

# focus the next window in the current desktop
super + {_,shift + }Right 
	bspc node -{f,s} next.local.window

# focus the window below in the current desktop
super + {_,shift + }Down
	bspc node -{f,s} south

# focus the window above in the current desktop
super + {_,shift + }Up 
	bspc node -{f,s} north

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

super + {h,v}
	bspc node -p {east,south}; \ 
	bspc node -o 0.5

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + @space 
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
	bspc node -v {-20 0,0 20,0 -20,20 0}

# toggle rofi switcher
# super + @space 
super + shift + d 
	rofi -show window 

# open vifm
super + z
	alacritty -e vifm

# lock the screen
super + l 
	slimlock

# Raise volume
XF86AudioRaiseVolume
	amixer -D pulse sset Master 5%+

# Lower volume
XF86AudioLowerVolume
	amixer -D pulse sset Master 5%-

# Mute / Unmute
XF86AudioMute
	amixer set Master toggle

# Start firefox
super + f
	firefox

# Reboot
super + ctrl + F1
	reboot

# Shutdown
super + ctrl + F2 
	poweroff

# Open gmail in firefox
XF86Mail
	firefox "https://mail.google.com/mail/u/0/#inbox"

# Open google drive in firefox
XF86HomePage
	firefox "https://drive.google.com/drive/my-drive"

# Toggle polybar visible
super + shift + b
	{polybar-msg cmd toggle; bspc config top_padding +0 ,\
         polybar-msg cmd toggle; bspc config top_padding 40 }

# Open this file for editing
super + F1
	alacritty -e nvim $HOME/.config/sxhkd/sxhkdrc

# change window gap at run time
super + KP_Add
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` + 1 ))

# Restore original gap
super + shift + 0
    bspc config top_padding 40; bspc config -d focused window_gap 10

super + KP_Subtract
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` - 1 ))

# Remove gap
super + KP_Decimal
    bspc config top_padding 40; bspc config -d focused window_gap 10

# Rotate view 
super + alt + {Left,Right}
	{bspc node @/ -R -90,bspc node @/ -R 90}

# Change window layouts
super + shift + {h,j,k,l}
	bsp-layout set {tall,wide,even,tiled} -- --master-size 0.6

# Remove applied layout
super + shift + BackSpace
	bsp-layout remove

# Nuke a desktop. (i.e. close all windows in it.)
super + Delete ; {0-9}
	bspc node @^{10,1-9}:/ -c
