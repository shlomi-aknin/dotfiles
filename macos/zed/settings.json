// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "project_panel": {
    "hide_gitignore": false
  },
  "ui_font_size": 18,
  "ui_font_weight": 600,
  "buffer_font_size": 16,
  "buffer_font_weight": 600,
  "agent_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Dracula Solid"
  },
  "git": {
    "inline_blame": {
      "show_commit_summary": true
    }
  },
  "experimental.theme_overrides": {
    "element.hover": "#BD93F9",
    "border": "#6272A4",
    "ghost_element.selected": "#6272A4",
    "editor.background": "#000",
    "editor.gutter.background": "#000",
    "editor.document_highlight.bracket_background": "#BD93F9",
    "hint": "#cccccc",
    "tab.active_background": "#6272A4",
    "players": [
      {
        "cursor": "#5ac1feff",
        "background": "#5ac1feff",
        "selection": "#BD93F9ff"
      }
    ],
    "syntax": {
      "comment": {
        "color": "#FF79C6" // Example: a shade of green
      },
      "comment.doc": {
        "color": "#FF79C6" // Example: a shade of blue
      }
    }
  },
  "vim_mode": true,
  "relative_line_numbers": true,
  "cursor_blink": false,
  "vertical_scroll_margin": 999,
  "autosave": "on_focus_change",
  "scroll_beyond_last_line": "off",
  "auto_signature_help": true,
  "lsp_document_colors": "border"
}
